<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp">

    <LinearLayout
        android:id="@+id/kana_row_buttons_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_row_1_kana_1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorHiraganaButtonBackground"
            android:textColor="@color/colorKanaButtonText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_row_1_kana_2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorHiraganaButtonBackground"
            android:textColor="@color/colorKanaButtonText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_row_1_kana_3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorHiraganaButtonBackground"
            android:textColor="@color/colorKanaButtonText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_row_1_kana_4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorHiraganaButtonBackground"
            android:textColor="@color/colorKanaButtonText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_row_1_kana_5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorHiraganaButtonBackground"
            android:textColor="@color/colorKanaButtonText"
            android:textSize="18sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_kana_row_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0" />

</LinearLayout>
